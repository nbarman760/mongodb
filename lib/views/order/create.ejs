<% layout('index') %>
<!-- Form horizontal -->
<div class="container">
    <div class="panel-body bg-info row">
        <div class="text-left col-lg-6">
            <div class="col-lg-6">
                <h4>Create New Order</h4>
            </div>
        </div>
    </div>
    <form class="" action="" method="post">
        <div class="row">
            <div class="col-lg-6 bg-success ">
                <div class="form-group">
                    <label>Search Item</label>
                 <input type="search" id="searchItem" class="form-control" placeholder="Search item"/>
                </div>
                <table class="table table-hover table-striped table-bordered">
                        <tr>
                            <th>Item</th>
                            <th class="text-center">Qty</th>
                            <th class="text-center">action</th>
                        </tr>
                    <tbody id="itemBody">
                        <tr>
                            <td>
                                <div class="item">
                                    <img src="https://img.freepik.com/free-vector/medicine-elements-background_23-2147772710.jpg?size=338&ext=jpg" class="item-img"/>
                                    <div class="name">PAN D</div>
                                    <div class="price">Rs: 20.00 </div>
                                </div>

                            </td>
                            <td class="text-center qty-col"><input value="1" name="qty"/></td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a href="javascript:void(0)" class="btn btn-success">Add to order</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6 bg-info">
                <div class="form-group">
                    <label>Person Name</label>
                    <input type="" class="form-control" placeholder="Person name"/>
                </div>
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="" class="form-control" placeholder="Mobile number"/>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
$(document).on('keyup','#searchItem',function(){
    $('#itemBody').append('<tr>\n' +
        '                            <td>\n' +
        '                                <div class="item">\n' +
        '                                    <img src="https://img.freepik.com/free-vector/medicine-elements-background_23-2147772710.jpg?size=338&ext=jpg" class="item-img"/>\n' +
        '                                    <div class="name">PAN D</div>\n' +
        '                                    <div class="price">Rs: 20.00 </div>\n' +
        '                                </div>\n' +
        '\n' +
        '                            </td>\n' +
        '                            <td class="text-center qty-col"><input value="1" name="qty"/></td>\n' +
        '                            <td class="text-center">\n' +
        '                                <div class="btn-group">\n' +
        '                                    <a href="javascript:void(0)" class="btn btn-success">Add to order</a>\n' +
        '                                </div>\n' +
        '                            </td>\n' +
        '                        </tr>');
})
</script>