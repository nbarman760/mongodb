<% layout('index') %>
<div>
    <div class="panel-body bg-info row">
        <div class="text-left col-lg-6">
            <div class="col-lg-12">
                <h3>Add New Item</h3>
            </div>
        </div>
        <div class="text-right col-lg-6">
          <!--  <a href="/item/add" class="btn btn-primary">Add new item</a> -->
        </div>
    </div>
    <div class="clearfix"></div>
    <form class="" method="post" action="/item/store">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <div class="form-group">
                  <input type="text" name="name" class="form-control" placeholder="Name" required/>
                </div>
                <div class="form-group">
                    <input type="text" name="amt" class="form-control" placeholder="Amount" required/>
                </div>
                <div class="form-group">
                    <input type="text" name="qty" class="form-control" placeholder="stock" required/>
                </div>
                <div class="form-group">
                    <input type="file" name="thumbnail" class="form-control" placeholder="thumbnail"/>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <select  name="status" class="form-control" placeholder="status">
                        <option>Active</option>
                        <option>In-active</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea  name="description" class="form-control" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success"/>
                </div>
            </div>
        </div>
    </form>
</div>