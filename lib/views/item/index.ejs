<% layout('index') %>
<!-- Form horizontal -->
<div class="container">
    <div class="panel-body bg-info row">
        <div class="text-left col-lg-6">
            <div class="col-lg-3">
                <h4>Item List</h4>
            </div>
            <div class="col-lg-6">
                <input type="" id="name" class="form-control" placeholder="Search by name"/>
            </div>
        </div>
        <div class="text-right col-lg-6">
            <a href="/item/add" class="btn btn-primary">Add new item</a>
        </div>
    </div>
    <div class="row bg-primary search-panel">

        <div class="col-lg-3">
            <label>Price from:</label>
            <input type="number" id="priceFrom" class="form-control" placeholder="Price From"/>
        </div>
        <div class="col-lg-3">
            <label>Price to:</label>
            <input type="number" id="priceTo" class="form-control" placeholder="Price to"/>
        </div>
        <div class="col-lg-3">
            <label>Sku from</label>
            <input type="number" id="skufrm" class="form-control" placeholder="Min SKU"/>
        </div>
        <div class="col-lg-3">
            <label>Sku upto:</label>
            <input type="number" id="skuto" class="form-control" placeholder="MAX sku"/>
        </div>
    </div>
    <div class="clearfix"></div>
    <table class=" table table-striped table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Item Name</th>
            <th>Item SKU</th>
            <th>Regular Price</th>
            <th>Image</th>
            <th class="text-right">Action</th>
        </tr>
        <tbody id="item">

        </tbody>
        </thead>
    </table>
</div>
<script>
    $(document).ready(function(){
       $.ajax({
          url: '/item/getitems',
          type: 'GET',
          success:function(res){
                console.log(res);
                if(res.error==false){
                    $.each(res.items,function (index, item) {
                        $('#item').append('<tr>\n\
                        <td>'+(+index + (+1))+'</td>\n\
                        <td>'+item.name+'</td>\n\
                        <td>'+item.qty+'</td>\n\
                        <td>'+item.amt+'</td>\n\
                        <td>Null</td>\n\
                         <td class="text-right"><div class="btn-group"><a href="" class="btn btn-primary">Edit</a><a href="" class="btn btn-danger">Delete</a></div></td>\n\
                        </tr>');
                    });
                }
          },
           error:function(err){
              console.log(err);
              alert('Somthing went wrong');
           }
       });
    });
</script>